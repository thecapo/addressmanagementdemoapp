<div class="container">
  <h3>Admin DashBoard</h3><br><br>
  <table>
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
    </thead>
    <tbody>
      <% if @users.present? %>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Edit User', edit_user_path(user), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Delete User', user_path(user), method: :delete, data: {confirm: 'Are you sure to delete user?'}, class: 'btn btn-danger' %></td>
        </tr>
        <% end %>
      <% else %>
          <p>No Users Yet</p>
      <% end %>
    </tbody>
</table>
</div>

